                android:text="60"
                android:textColor="@color/gray_ccc"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View style="@style/divideline" />

        <View style="@style/divideline2" />

        <RelativeLayout
            android:id="@+id/ll_open_hotline"
            style="@style/scroll_linearlayout"
