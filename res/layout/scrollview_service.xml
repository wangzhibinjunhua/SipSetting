        <View style="@style/divideline" />

        <View style="@style/divideline2" />

        <LinearLayout
            android:id="@+id/ll_voicemail_number"
            style="@style/scroll_linearlayout"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voicemail_number"
