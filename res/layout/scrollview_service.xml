                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <CheckBox
                android:id="@+id/cb_open_noanswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View style="@style/divideline3" />

        <LinearLayout
            android:id="@+id/ll_unconditional_turn"
            style="@style/scroll_linearlayout"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unconditional_turn"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_unconditional_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_ccc"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View style="@style/divideline3" />

        <LinearLayout
